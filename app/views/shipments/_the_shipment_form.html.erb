<%= simple_form_for @shipment do |s| %>
<%= s.select :shipment_category_id, options_from_collection_for_select(ShipmentCategory.all, :id, :name)%>
<%= s.input :name %>
<%= s.input :description %>
<%= s.input :budget %>
<%= s.input :location %>
<%= s.input :open_for_bids %>

<%= s.submit class: "btn btn-success" %>  
<% end %>