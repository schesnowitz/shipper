<h1>Shipper Shipments</h1>

<%= form_tag search_shipments_path, method: :get do |search| %>
<%= text_field_tag :search, nil, placeholder: "Enter Anything" %>
<%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<%= paginate @shipments %> 


<table class="table table-bordered table-responsive">
	<thead>
		<tr>
			<th>
				Posted At
			</th>
			<th>
				Name
			</th>
			<th>
				Description
			</th>			
			<th>
				Category
			</th>
			<th>
				From
			</th>
			<th>
				To
			</th>
			<th>
				Rate
			</th>
			<th>
				Lowest Bid
			</th>
			<th>
				[HEADER]
			</th>
			<th>
			
			</th>
		</tr>
	</thead>
	<% @shipments.each do |ship| %>
	<tbody>
		<tr>
			<td>
				<%= time_ago_in_words(ship.created_at) %>
			</td>
			<td>
				<%= ship.name.truncate_words(4) %>
			</td>
			<td>
				<%= ship.description.truncate_words(4) %>
			</td>			
			<td>
				Category here
			</td>
			<td>

			</td>
			<td>
				To goes here
			</td>
			<td>
			<%= ship.budget %>
			</td>
			<td>
				Lowest Bid
			</td>
			<td>
				[CONTENT]
			</td>
			<td>
				<%= link_to "Details", ship, class: "btn btn-info btn-xs" %> 
			</td>
		</tr>
	</tbody>
	<% end %>
</table>



<%= paginate @shipments %> 

